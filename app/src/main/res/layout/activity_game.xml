<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">


    <TableLayout
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp">


        <TableRow>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:paddingBottom="10dp"
                android:text="@string/score"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:paddingStart="45dp"
                android:paddingEnd="0dp"
                android:paddingBottom="10dp"
                android:text="@string/lives"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:paddingStart="45dp"
                android:paddingEnd="0dp"
                android:paddingBottom="10dp"
                android:text="@string/high_score"
                android:textSize="25sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/curr_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="end"
                android:text="@string/curr_score"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/curr_lives"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="end"
                android:text="@string/curr_lives"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/curr_high_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="end"
                android:text="@string/curr_high_score"
                android:textSize="25sp" />
        </TableRow>

        <TableRow>

            <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                >

                <TextureView
                    android:id="@+id/textureView"
                    android:layout_width="match_parent"
                    android:layout_height="370dp" />



            <TextView
                android:id="@+id/curr_color_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginEnd="80sp"
                android:layout_marginBottom="50dp"
                android:textSize="40sp"
                android:text="@string/curr_color"
                />

                <TextView
                    android:background="@drawable/hexagon"
                    android:id="@+id/curr_color_disp"
                    android:layout_width="50dp"
                    android:layout_gravity="bottom|left"
                    android:layout_height="50dp"
                    android:layout_marginStart="80sp"
                    android:layout_marginBottom="50dp"
                    />
            </FrameLayout>

        </TableRow>
    </TableLayout>

    <ImageButton
        android:id="@+id/btnCapture"
        android:layout_below="@id/table"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btncamera" />

</RelativeLayout>